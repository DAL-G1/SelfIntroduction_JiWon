<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/facebook_Deepblue"
        android:gravity="center"
        android:text="문지원"
        android:textColor="#ffffff"
        android:textSize="15dp"


        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/facebook_background"
            android:id="@+id/ImageView_Background"
            />

        <ImageView
            android:id="@+id/ImageView_Profile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignBottom="@+id/ImageView_Background"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:src="@drawable/facebook_profile_small"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문지원"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"

        >
        <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_blue"
        android:src="@drawable/iconfinder_check_user"
        android:layout_marginLeft="25dp"
        />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_blue"
            android:src="@drawable/iconfinder_heart_2202276"
            android:layout_marginLeft="25dp"
            />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_1"
            android:src="@drawable/iconfinder_message"
            android:layout_marginLeft="25dp"
            android:id="@+id/Button_Message"
            />
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_1"
            android:src="@drawable/iconfinder_more_dot_tripple"
            android:layout_marginLeft="25dp"
            android:id="@+id/Button_More"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="친구"
            android:textColor="@color/facebook_Deepblue"

            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="팔로잉"
            android:textColor="@color/facebook_Deepblue"
            android:gravity="center"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="메세지"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="25dp"

            />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="더보기"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginLeft="25dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/iconfinder_study_115795" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Seoul National University"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="에서 17학번 (3학년)"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/iconfinder_study_115795" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Seoul National University"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="에서 재료공학부 전공"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            />

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/iconfinder_study_115795"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Seoul National University"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="에서 전기정보공학부 부전공"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#000000"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/iconfinder_seo_programming_1009241"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Waffle Studio"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="에서 Rookies 담당"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/iconfinder_take_exercise_4042280"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="서울대학교 유도부"
            android:textColor="#000000"
            android:textStyle="bold" />


    </LinearLayout>







</LinearLayout>